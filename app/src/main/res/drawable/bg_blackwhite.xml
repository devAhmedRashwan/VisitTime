<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false">
        <shape android:shape="rectangle" android:tintMode="add">
            <stroke android:width="2dp"
                android:color="@color/mywhite">
            </stroke>



            <gradient android:endColor="@color/row1s" android:startColor="#C1EBEFEF"
                android:angle="360"/>
            <corners android:radius="5dp">
            </corners>
        </shape>
    </item>
    <item
        android:state_pressed="true">
        <shape android:shape="rectangle" android:tintMode="add">
            <stroke android:width="2dp"
                android:color="@color/mywhite">
            </stroke>
            <gradient android:endColor="@color/myred" android:startColor="@color/myreds" />
            <corners android:radius="5dp">
            </corners>
        </shape>
    </item>

</selector>