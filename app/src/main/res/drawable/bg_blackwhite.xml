<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false">
        <shape android:shape="rectangle" android:tintMode="add">
            <stroke android:width="2dp"
                android:color="@color/mywhite">
            </stroke>



            <gradient android:endColor="@color/row2s"
                android:centerColor="@color/row2s"
                android:startColor="#C1519DEA"
                android:angle="360"/>
            <corners android:radius="5dp">
            </corners>
        </shape>
    </item>
    <item
        android:state_pressed="true">
        <shape android:shape="rectangle" android:tintMode="add">
            <stroke android:width="2dp"
                android:color="@color/mywhite">
            </stroke>
            <gradient android:endColor="@color/row1" android:startColor="@color/mywhite" />
            <corners android:radius="5dp">
            </corners>
        </shape>
    </item>

</selector>