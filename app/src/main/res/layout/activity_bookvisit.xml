<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundmedical"
    android:orientation="vertical"
    tools:context=".bookvisit">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/visitdate"
            android:layout_width="203dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:background="@drawable/background_title"
            android:gravity="center"
            android:text="@string/pickday"
            android:textAlignment="center"

            android:textAllCaps="false"
            android:textColor="@color/mywhite"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/check"
            android:layout_width="84dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:background="@drawable/background_title"
            android:gravity="center"
            android:text="max"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone">

        <Spinner
            android:id="@+id/fullbookedsp"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/background_rowstyle"
            android:popupBackground="@drawable/backgrount_transparent"
            android:textAlignment="center" />

        <Button
            android:id="@+id/fullbooked"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/background_title"
            android:padding="10dp"
            android:text="@string/fullbooked"
            android:textAllCaps="false"
            android:textColor="@color/mywhite"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/maintimes"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/background_rowstyle"
            android:popupBackground="@drawable/backgrount_transparent"
            android:textAlignment="center" />

        <Button
            android:id="@+id/getmain"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/background_title"
            android:padding="10dp"
            android:text="@string/basictimes"
            android:textAllCaps="false"
            android:textColor="@color/mywhite"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_horizontal">

        <Spinner
            android:id="@+id/availabletimespinner"
            android:layout_width="146dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/background_rowstyle"
            android:popupBackground="@drawable/background_rowstyle"
            android:textAlignment="center" />

        <Button
            android:id="@+id/availabletimes"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="16dp"
            android:background="@drawable/background_title"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/choosetime"
            android:textAllCaps="false"
            android:textColor="@color/mywhite"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </LinearLayout>

    <LinearLayout
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/background_title"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:text="بيانات المريض"
            android:textColor="@color/mywhite"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/patname"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_rowstyle"
            android:hint="ادخل اسم المريض"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#D5373535"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:background="@drawable/background_title"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="الاسم"
            android:textColor="#FFEB3B"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/patphone"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_rowstyle"
            android:hint="@string/insertphone"
            android:inputType="phone"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#D5373535"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:background="@drawable/background_title"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text=" رقم الهاتف"
            android:textColor="#FFEB3B"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/patage"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_rowstyle"
            android:hint="السن"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#D5373535"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:background="@drawable/background_title"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="@string/age"
            android:textColor="#FFEB3B"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/patemail"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_rowstyle"
            android:hint="@string/insertemail"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#D5373535"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:background="@drawable/background_title"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="@string/email"
            android:textColor="#FFEB3B"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/patnote"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_rowstyle"
            android:hint="@string/notes"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#D5373535"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:background="@drawable/background_title"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="@string/notes"
            android:textColor="#FFEB3B"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/booknow"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="16dp"
            android:background="@drawable/background_delete"
            android:fontFamily="@font/wendy_one"
            android:gravity="center"
            android:text="احجز الموعد وادفع الآن"
            android:textAllCaps="false"
            android:textColor="@color/mywhite"
            android:textSize="24sp" />

    </LinearLayout>
</LinearLayout>
</LinearLayout>