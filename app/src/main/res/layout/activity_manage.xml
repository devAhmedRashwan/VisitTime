<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".bookvisit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/allreservations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/gradient_animation"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/Manageall"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/mywhite"
            android:textSize="22sp" />

        <Button
            android:id="@+id/setdatesbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/gradient_animation"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="تحديد فترة الحجز"
            android:textColor="@color/mywhite"
            android:textSize="22sp" />

        <Button
            android:id="@+id/addtimebtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/gradient_animation"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/addnewtimebtn"
            android:textColor="@color/mywhite"
            android:textSize="22sp" />

        <Button
            android:id="@+id/disabletimebtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/gradient_animation"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/disabletimes"
            android:textColor="@color/mywhite"
            android:textSize="22sp" />

        <Button
            android:id="@+id/enabletimesbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/gradient_animation"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/enabletimes"
            android:textColor="@color/mywhite"
            android:textSize="22sp" />

        <Button
            android:id="@+id/editmangers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/gradient_animation"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/Managers"
            android:textColor="@color/mywhite"
            android:textSize="22sp" />

        <Button
            android:id="@+id/DaysInbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/gradient_animation"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/DaysIn"
            android:textColor="@color/mywhite"
            android:textSize="22sp" />

    </LinearLayout>


</LinearLayout>