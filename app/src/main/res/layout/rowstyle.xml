<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rowstyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_rowstyle"
        android:orientation="vertical">

    <LinearLayout

            android:id="@+id/myL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:weightSum="5">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="5"
                android:orientation="vertical"
                android:weightSum="100">


            <TextView
                    android:id="@+id/caseAccuser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/background_selected_t"
                    android:backgroundTint="@color/honey"
                    android:fontFamily="@font/aldrich"
                    android:padding="3dp"
                    android:text="@string/caseAccuser"
                    android:textAlignment="center"
                    android:textColor="@color/mywhite"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            <TextView
                    android:id="@+id/caseSessionDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/background_selected_t"
                    android:backgroundTint="@color/myblackLight"
                    android:padding="3dp"
                    android:text="@string/caseSessionDate"
                    android:textAlignment="center"
                    android:textColor="@color/mywhite"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/remain"
                    android:layout_width="190dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/calendar2"
                    android:gravity="fill|fill_horizontal|center_vertical|fill_vertical"
                    android:padding="3dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="8dp"
                    android:text="الوقت المتبقي"
                    android:textColor="@color/mywhite"
                    android:textSize="18sp"
                    android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="2"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/caseNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="25"
                    android:background="@drawable/background_selected_t"
                    android:backgroundTint="@color/honeyl"
                    android:padding="4dp"
                    android:text="@string/caseNum"
                    android:textAlignment="center"
                    android:textColor="@color/myYellow"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/caseYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="25"
                    android:background="@drawable/background_selected_t"
                    android:backgroundTint="@color/honeyl"
                    android:baselineAligned="false"
                    android:padding="4dp"
                    android:text="@string/caseYear"
                    android:textAlignment="center"
                    android:textColor="@color/myYellow"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            <TextView

                    android:id="@+id/caseCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="25"
                    android:background="@drawable/background_selected_t"
                    android:backgroundTint="@color/honeyl"
                    android:padding="4dp"
                    android:text="@string/caseCount"
                    android:textAlignment="center"
                    android:textColor="@color/myYellow"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/caseCountYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="25"
                    android:background="@drawable/background_selected_t"
                    android:backgroundTint="@color/honeyl"
                    android:padding="4dp"
                    android:text="@string/caseCountYear"
                    android:textAlignment="center"
                    android:textColor="@color/myYellow"
                    android:textSize="16sp"
                    android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                android:weightSum="100">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="25"
                    android:background="@drawable/background_selected_t"
                    android:backgroundTint="@color/honeyl"
                    android:padding="4dp"
                    android:text="@string/caseNum"
                    android:textAlignment="center"
                    android:textColor="#E7ECE9"
                    android:textSize="16sp" />

            <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="25"
                    android:background="@drawable/background_selected_t"
                    android:backgroundTint="@color/honeyl"
                    android:baselineAligned="false"
                    android:padding="4dp"
                    android:text="@string/caseYear"
                    android:textAlignment="center"
                    android:textColor="#E7ECE9"
                    android:textSize="16sp" />

            <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="25"
                    android:background="@drawable/background_selected_t"
                    android:backgroundTint="@color/honeyl"
                    android:padding="4dp"
                    android:text="@string/caseCount"
                    android:textAlignment="center"
                    android:textColor="#E7ECE9"
                    android:textSize="16sp" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="25"
                    android:background="@drawable/background_selected_t"
                    android:backgroundTint="@color/honeyl"
                    android:padding="4dp"
                    android:text="@string/caseCountYear"

                    android:textAlignment="center"
                    android:textColor="#E7ECE9"
                    android:textSize="16sp" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>