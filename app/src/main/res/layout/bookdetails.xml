        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:weightSum="10">


        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="8"
            android:orientation="vertical"
            android:weightSum="100">

            <TextView
                android:id="@+id/dvnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/BookNo"
                android:textAlignment="center"
                android:textColor="@color/myYellow"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dpatname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/patname"
                android:textAlignment="center"
                android:textColor="@color/myYellow"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dpatage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/age"
                android:textAlignment="center"
                android:textColor="@color/myYellow"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dpatemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/email"
                android:textAlignment="center"
                android:textColor="@color/myYellow"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/dpatphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:autoLink="phone"
                android:background="@drawable/bg_greenblue"
                android:baselineAligned="false"
                android:clickable="true"
                android:contextClickable="true"
                android:gravity="center"
                android:linksClickable="true"
                android:padding="4dp"
                android:text="@string/Phone"
                android:textAlignment="center"
                android:textColor="@color/myYellow"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/dsex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/sex"
                android:textAlignment="center"
                android:textColor="@color/myYellow"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView

                android:id="@+id/dpatnotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/notes"
                android:textAlignment="center"
                android:textColor="@color/myYellow"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/dstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/status"
                android:textColor="@color/myYellow"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/dcreator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/creator"
                android:textColor="@color/myYellow"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView

                android:id="@+id/sugdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/sugdate"
                android:textColor="@color/myYellow"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView

                android:id="@+id/sugtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/suggestedtdatetime"
                android:textColor="@color/myYellow"
                android:textSize="18sp"
                android:textStyle="bold" />



        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="100">

            <TextView

                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:baselineAligned="false"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/BookNo"
                android:textAlignment="center"
                android:textColor="#E7ECE9"
                android:textSize="18sp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:baselineAligned="false"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/patname"
                android:textAlignment="center"
                android:textColor="#E7ECE9"
                android:textSize="18sp" />

            <TextView

                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:baselineAligned="false"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/age"
                android:textAlignment="center"
                android:textColor="#E7ECE9"
                android:textSize="18sp" />

            <TextView

                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:baselineAligned="false"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/email"
                android:textAlignment="center"
                android:textColor="#E7ECE9"
                android:textSize="18sp" />

            <TextView

                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:baselineAligned="false"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/Phone"
                android:textAlignment="center"
                android:textColor="#E7ECE9"
                android:textSize="18sp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/sex"
                android:textAlignment="center"
                android:textColor="#E7ECE9"
                android:textSize="18sp" />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/notes"
                android:textAlignment="center"
                android:textColor="#E7ECE9"
                android:textSize="18sp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/status"
                android:textAlignment="center"
                android:textColor="#E7ECE9"
                android:textSize="18sp" />

            <TextView

                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/creator"
                android:textAlignment="center"
                android:textColor="#E7ECE9"
                android:textSize="18sp" />
            <TextView

                android:id="@+id/sugdateV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/sugdate"
                android:textAlignment="center"
                android:textColor="#E7ECE9"
                android:textSize="18sp" />
            <TextView

                android:id="@+id/sugtimeV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/suggestedtdatetime"
                android:textAlignment="center"
                android:textColor="#E7ECE9"
                android:textSize="18sp" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:weightSum="100">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="6">

                <TextView
                    android:id="@+id/dremain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_edit"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="الوقت المتبقي"
                    android:textColor="@color/mywhite"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_edit"
                    android:backgroundTint="@color/honey"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/dvisittime"
                    android:textAlignment="center"
                    android:textColor="@color/mywhite"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dvisitdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="4"
                    android:background="@drawable/background_edit"
                    android:backgroundTint="@color/honey"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/visitdate"
                    android:textAlignment="center"
                    android:textColor="@color/mywhite"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/userMgmnt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/req_change"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/gradient_animation"
            android:text="طلب تعديل موعد"
            android:textColor="@color/mywhite"
            android:textSize="16sp" />

        <Button
            android:id="@+id/req_full_change"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/gradient_animation"
            android:text="تعديل بيانات"
            android:textColor="@color/mywhite"
            android:textSize="16sp" />

        <Button
            android:id="@+id/req_cancelbtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/gradient_animation"
            android:text="طلب الغاء موعد"
            android:textColor="@color/mywhite"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/adminMgmnt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="5">

            <Button
                android:id="@+id/delbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/gradient_animation"
                android:enabled="false"
                android:text="حذف موعد"
                android:textColor="@color/myYellow"
                android:textSize="16sp" />

            <Button
                android:id="@+id/acceptcancellationbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/gradient_animation"
                android:enabled="false"
                android:text="قبول الغاء"
                android:textColor="@color/myYellow"
                android:textSize="16sp" />

            <Button
                android:id="@+id/accepttimechangebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/gradient_animation"
                android:enabled="false"
                android:text="قبول تعديل"
                android:textColor="@color/myYellow"
                android:textSize="16sp" />

            <Button
                android:id="@+id/markasdone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/gradient_animation"
                android:enabled="false"
                android:text="تأكيد حضور"
                android:textColor="@color/myYellow"
                android:textSize="16sp" />

            <Button
                android:id="@+id/undoconfirmbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/gradient_animation"
                android:enabled="false"
                android:text="الغاء تأكيد"
                android:textColor="@color/myYellow"
                android:textSize="16sp" />

            <Button
                android:id="@+id/confirmbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/gradient_animation"
                android:enabled="false"
                android:text="تأكيد الحجز"
                android:textColor="@color/myYellow"
                android:textSize="16sp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>