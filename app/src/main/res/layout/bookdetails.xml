<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rowstyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/bg_inbut_style"
    android:orientation="vertical">

    <TextView
        android:id="@+id/date4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/background_edit"
        android:backgroundTint="@color/honey"
        android:padding="15dp"
        android:text="بطاقة حجز تفصيلية"
        android:textAlignment="center"
        android:textColor="@color/mywhite"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout

        android:id="@+id/myL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:weightSum="10">


        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="8"
            android:orientation="vertical"
            android:weightSum="100">

            <TextView
                android:id="@+id/dvnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/BookNo"
                android:textAlignment="center"
                android:textColor="@color/myYellow"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dpatname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/patname"
                android:textAlignment="center"
                android:textColor="@color/myYellow"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dpatage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/age"
                android:textAlignment="center"
                android:textColor="@color/myYellow"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dpatemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/email"
                android:textAlignment="center"
                android:textColor="@color/myYellow"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/dpatphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:baselineAligned="false"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/Phone"
                android:textAlignment="center"
                android:textColor="@color/myYellow"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/dsex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/sex"
                android:textAlignment="center"
                android:textColor="@color/myYellow"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/dstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/status"
                android:textColor="@color/myYellow"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView

                android:id="@+id/dcreator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/status"
                android:textColor="@color/myYellow"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="100">

            <TextView

                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:baselineAligned="false"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/BookNo"
                android:textAlignment="center"
                android:textColor="#E7ECE9"
                android:textSize="18sp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:baselineAligned="false"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/patname"
                android:textAlignment="center"
                android:textColor="#E7ECE9"
                android:textSize="18sp" />

            <TextView

                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:baselineAligned="false"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/age"
                android:textAlignment="center"
                android:textColor="#E7ECE9"
                android:textSize="18sp" />

            <TextView

                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:baselineAligned="false"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/email"
                android:textAlignment="center"
                android:textColor="#E7ECE9"
                android:textSize="18sp" />

            <TextView

                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:baselineAligned="false"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/Phone"
                android:textAlignment="center"
                android:textColor="#E7ECE9"
                android:textSize="18sp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/sex"
                android:textAlignment="center"
                android:textColor="#E7ECE9"
                android:textSize="18sp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/status"
                android:textAlignment="center"
                android:textColor="#E7ECE9"
                android:textSize="18sp" />

            <TextView

                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_greenblue"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/creator"
                android:textAlignment="center"
                android:textColor="#E7ECE9"
                android:textSize="18sp" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:weightSum="100">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6">

                <TextView
                    android:id="@+id/dtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_edit"
                    android:backgroundTint="@color/honey"
                    android:padding="15dp"
                    android:text="@string/dvisittime"
                    android:textAlignment="center"
                    android:textColor="@color/mywhite"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dvisitdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="4"
                    android:background="@drawable/background_edit"
                    android:backgroundTint="@color/honey"
                    android:padding="15dp"
                    android:text="@string/visitdate"
                    android:textAlignment="center"
                    android:textColor="@color/mywhite"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/dremain"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/calendar2"
                android:gravity="fill|fill_horizontal|center_vertical|fill_vertical"
                android:padding="3dp"
                android:paddingStart="20dp"
                android:paddingEnd="8dp"
                android:text="الوقت المتبقي"
                android:textColor="@color/mywhite"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>


</LinearLayout>